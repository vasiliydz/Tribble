<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
        
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="@color/button_yellow_1"
                android:endColor="@color/button_yellow_2"
                android:angle="90"/>
            
            <corners android:bottomRightRadius="7dip"
                 android:bottomLeftRadius="0.1dip"
                 android:topLeftRadius="7dip"
                 android:topRightRadius="0.1dip"/>
            <padding
                android:left="10dip"
                android:top="10dip"
                android:right="10dip"
                android:bottom="10dip" />
        </shape>
    </item>
    
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="@color/button_yellow_2"
                android:endColor="@color/button_yellow_1"
                android:angle="90"/>
            
            <corners android:bottomRightRadius="7dip"
                 android:bottomLeftRadius="0.1dip"
                 android:topLeftRadius="7dip"
                 android:topRightRadius="0.1dip"/>
            <padding
                android:left="10dip"
                android:top="10dip"
                android:right="10dip"
                android:bottom="10dip" />
        </shape>
    </item>    

</selector>
